{
  "root": true,
  "overrides": [
    {
      "files": ["**/*.{ts,tsx}"],
      "extends": ["plugin:@mufan/typescript", "plugin:@mufan/dev"],
      "parserOptions": {
        "project": "tsconfig.json"
      }
    },
    {
      "files": ["*.test.ts"],
      "rules": {
        "@mufan/import": "off",
        "@mufan/scoped-modules": "off"
      }
    }
  ]
}
